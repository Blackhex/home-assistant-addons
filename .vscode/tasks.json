{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Home Assistant/Start Supervisor",
      "type": "shell",
      "command": "supervisor_run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build/Template",
      "type": "shell",
      "command": ".vscode\\build-addon.ps1 template @('BUILD_FROM=ghcr.io/home-assistant/amd64-base:latest', 'REPO_URL=https://github.com/Blackhex/firefly-iii.git')",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Build/Firefly III",
      "type": "shell",
      "command": ".vscode\\build-addon.ps1 firefly-iii",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Build Firefly III Dev",
      "type": "shell",
      "command": "docker build --build-arg BUILD_FROM=\"ghcr.io/hassio-addons/base/amd64:stable\" -t firefly-iii-dev firefly-iii-dev",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Run Firefly III Dev",
      "type": "shell",
      "command": "docker run --rm firefly-iii-dev",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Build Angular",
      "type": "shell",
      "command": "docker build --build-arg BUILD_FROM=\"ghcr.io/hassio-addons/base/amd64:stable\" -t angular-hello-addon angular-hello-addon",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Build/Firefly III Dev",
      "type": "shell",
      "command": "docker build --build-arg BUILD_FROM=\"ghcr.io/hassio-addons/base/amd64:stable\" -t firefly-iii-dev firefly-iii-dev",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Build/Angular",
      "type": "shell",
      "command": "docker build --build-arg BUILD_FROM=\"ghcr.io/hassio-addons/base/amd64:stable\" -t angular-hello-addon angular-hello-addon",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "Run/Firefly III Dev",
      "type": "shell",
      "command": "docker run --rm firefly-iii-dev",
      "group": "build",
      "presentation": {
        "panel": "shared"
      }
    },
  ]
}
